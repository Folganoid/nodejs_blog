<%  include ../layout/header.ejs %>

<div class="main">
    <div class="container">
        <div class="content">
            <div class="post">
                <div class="top">
                    <h2>
                        <%=post.title %>
                    </h2>
                </div>
                <div class="body">
                    <p><%=post.body %></p>
                </div>
                <div class="bottom">
                    <div class="author">
                        Автор:
                        <a href="/">Author</a>
                    </div>
                </div>
            </div>

            <div class="comments">
                <h3>Comments</h3>
                <div class="comment-list">
                    <form class="comment">
                        <textarea name="body"></textarea>
                        <div class="buttons">
                            <button class="cancel secondary">Cancel</button>
                            <button class="send">Send</button>
                        </div>
                    </form>
                </div>
            </div>



        </div>

        <% include ../layout/sidebar.ejs %>

    </div>
</div>

<% include ../layout/footer.ejs %>